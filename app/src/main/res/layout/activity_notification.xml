<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_op30">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_day"
            android:layout_width="221dp"
            android:layout_height="30dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="TextView"
            android:textSize="23sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:background="@drawable/transparent_box"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_centerInParent="true"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="31dp"
                android:src="@drawable/outline_medication_black_24dp" />

            <TextView
                android:id="@+id/notification_name"
                android:layout_width="221dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginStart="13dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="medicineName"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/notification_type"
                android:layout_width="221dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginStart="13dp"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="medicineType"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/notification_color"
                android:layout_width="221dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginStart="13dp"
                android:layout_marginTop="70dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="medicineColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/notification_dosage"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/notification_color"
                android:layout_alignParentTop="true"
                android:layout_marginTop="135dp"
                android:text="Medicine dosage"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
