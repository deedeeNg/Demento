<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transparent_box"
    android:paddingVertical="8dp"
    >

    <ImageButton
        android:id="@+id/editTime_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:background="@drawable/transparent_button"
        app:srcCompat="@drawable/outline_mode_edit_black_24dp" />

    <ImageButton
        android:id="@+id/removeTime_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:background="@drawable/transparent_button"
        app:srcCompat="@drawable/outline_delete_black_24dp" />

    <TextView
        android:id="@+id/timeText_view"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:text="time"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp" />
</RelativeLayout>